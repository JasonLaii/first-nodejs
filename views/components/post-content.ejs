<div class="posts">
  <div class="avatar">
    <img src="/img/<%= post.author.avatar%>" alt="avatar" />
  </div>

  <div class="posts-article">
    <div class="posts-article-title">
      <h1> <a href="/posts/<%= post._id%>"> <%= post.title%></a></h1>
    </div>

    <div class="posts-article-content">
      <p><%- post.content%></p>
    </div>

    <div class="article-footer">
      <span><%= post.created_at%></span>
      <div class="feedback">
        <span>浏览(<%= post.pv%>)</span>
        <span><a href="/posts/<%= post._id%>/comment-page">留言(3) </a></span>
        <% if(user && post.author._id && user._id.toString() ===
        post.author._id.toString()) { %>
        <img src="/img/down.png" alt="dropdown" class="post-icon"/>
        <ul class="dropdown" style="display:none">
          <li class="item"><a href="/posts/<%= post._id%>/edit"> 编辑</a></li>
          <li class="item"><a href="/posts/<%= post._id%>/remove"> 删除</a></li>
        </ul>
        <% } %>
      </div>
    </div>
  </div>
</div>
